<html>
    <head>
        <title>
            Create Issue
        </title>
        <script src="https://kit.fontawesome.com/d76b9d75bf.js" crossorigin="anonymous"></script>
        <!-- our css must be below other styles  -->
        <link rel="stylesheet" href="/css/create_issue.css">
        
    </head>
    <body>
        <nav>

            <h1 id="page-heading">
                Create Issue for <%= project_info.name%>
            </h1>

        </nav>
        
        <form id="new-issue-form" action="/created-issue/?id=<%= project_info._id%>" method="POST">
            <input id="title" type="text" name="title" placeholder="Issue Title" required><br>
            <input id="description" type="text" name="description" placeholder="Description" required><br>

            <%if(issues.length > 0){%>

                <input id="label" list="labels" name="label" placeholder="Label" required><br>
                <datalist id="labels">
                    <% for(let i of issues){%>
                        
                        <option value="<%= i.label%>">
                        
                    <%}%>
                </datalist>
            <%}else{%>
                <input id="label" type="text" name="label" placeholder="Label" required><br>
            <%}%>
            
            
            <input id="author" type="text" name="author" placeholder="Author" required><br>
            <button id="submit-btn" type="submit"> Add Issue</button>
        </form>
        <script type="text/javascript" src=""></script>
    </body>
</html>
